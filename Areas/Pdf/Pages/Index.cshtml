@page "/pdf/{companykey:regex(partneri|koupelny-jas)?}/"
@model Jas.Areas.Pdf.Pages.IndexModel
@{
    ViewData["Title"] = "Správa katalogů";
}

<style>
    .catalog-img {
    height: 150px;
    width: 100%;
    object-fit: contain;
    background-color: #f8f9fa;
    padding: 0.5rem;
    }
</style>

<div class="container my-5">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                @if (string.Equals(Model.CompanyKey, "partneri", StringComparison.OrdinalIgnoreCase))
                {
                    <a asp-area="Pdf"
                       asp-page="/Index"
                       asp-route-CompanyKey="partneri">Partneři</a>
                }
                else
                {
                    <a asp-area="Pdf"
                       asp-page="/Index"
                       asp-route-CompanyKey="koupelny-jas">Koupelny JaS</a>
                }
            </li>

        </ul>
    </nav>

    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 g-4">
        @foreach (var item in Model.Catalogs)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="/pdf/src/@item.CatalogKey/@Html.Raw(item.CompanyCode + ".jpg")" class="card-img-top catalog-img" alt="@item.CatalogTitle">
                    <a asp-area="Pdf"
                       asp-page="QrSeries"
                       asp-route-CompanyKey="@Model.CompanyKey"
                       asp-route-CatalogKey="@item.CatalogKey"
                       class="btn btn-sm btn-outline-primary me-2">
                        QR Série
                    </a>
                </div>
            </div>
        }
    </div>
</div>

