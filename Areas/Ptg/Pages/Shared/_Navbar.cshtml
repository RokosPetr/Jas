        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Přepnout navigaci">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">

            @{
                bool isExpo = false;
                bool isPort = false;

                if (Model is IndexModel im)
                {
                    // null/expozice => Expozice aktivní, "portfolio" => Portfolio aktivní
                    isPort = string.Equals(im.Available, "portfolio", StringComparison.OrdinalIgnoreCase);
                    isExpo = !isPort;
                }
            }

            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link @(isExpo ? "active" : null)"
                       asp-area="Ptg" asp-page="/Index"
                       asp-route-Available="expozice" asp-route-ProducerName="">
                        Moje stojany
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(isPort ? "active" : null)"
                       asp-area="Ptg" asp-page="/Index"
                       asp-route-Available="portfolio" asp-route-ProducerName="">
                        Všechny stojany
                    </a>
                </li>
            </ul>

            <!-- user dropdown vpravo -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="user">@NavbarService.JasUser.Name</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
