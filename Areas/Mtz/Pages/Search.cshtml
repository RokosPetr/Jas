@page
@model Jas.Areas.Mtz.Pages.SearchModel
@{
    ViewData["Title"] = "Materiálně technické zabezpečení";
}

<div class="mtz-hlavni">
    <main role="main">
        <div class="search">
            <form asp-area="Mtz" asp-page="Search" method="get">
                <div class="input-group">
                    <input type="text" id="search-product" class="form-control" asp-for="SearchString" placeholder="zadejte hledaný výraz" autofocus />
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <br />
        <div class="row vypis-produktu">
            <div class="col-lg-12 p-0 hlavni-rada">
                <div class="mtz-product-wrap">
                    @{
                        int index = 1;
                        foreach (var productMtz in Model.Products)
                        {
                            <div class="@((index % 6) == 0 ? " mtz-product-last" : "") @(productMtz.MtzProductAttributes != null ? " mtz-product-clothingsize" : " mtz-product")">
                                <a asp-page="Product" asp-area="Mtz" asp-route-id="@productMtz.Id">
                                    <img src="@Html.DisplayFor(modelItem => productMtz.Image)" />
                                </a>
                                <div class="mtz-product-popis-wrap">
                                    <h2 id="mtz-product-popis">
                                        <a asp-page="Product" asp-area="Mtz" asp-route-id="@productMtz.Id">
                                            @Html.DisplayFor(modelItem => productMtz.Name)
                                        </a>
                                    </h2>
                                    <div class="mtz-product-select-size-wrap">
                                        <form asp-page="Product" asp-area="Mtz" method="get">
                                            <input type="hidden" name="id" value="@productMtz.Id" />
                                            <input class="mtz-product-objednat" type="submit" value="detail" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                            index++;
                        }
                    }
                </div>
            </div>
        </div>

    </main>
</div>
