@page
@model LoginModel

@{
    ViewData["Title"] = "Přihlášení";
}

<div id="login-form">
    <h1>Vstup vyžaduje přihlášení</h1>
    <form method="post" id="frm-loginForm">
        <div><img src="/images/uzivatel_login.png"><label for="Input_Email">uživatelské jméno</label></div>
        <div style="margin-bottom: 15px;width: 96.5%"><input asp-for="Input.Email" /><span asp-validation-for="Input.Email" class="help-block text-danger"></span></div>
        <div><img src="/images/heslo_login.png"><label for="Input_Password">heslo</label></div>
        <div style="margin-bottom: 15px;width: 96.5%"><input asp-for="Input.Password" /><span asp-validation-for="Input.Password" class="help-block text-danger"></span></div>
        <div class="prihlaseni">
            <div style="margin-top: 5px"><a id="forgot-password" asp-page="./ForgotPassword">Zapomenuté heslo</a></div>
            <input type="submit" value="PŘIHLÁSIT" />
        </div>
    </form>
    <div class="login-form-footer">Pokud heslo nemáte, nastavte si ho přes odkaz Zapomenuté heslo</div>
</div>

