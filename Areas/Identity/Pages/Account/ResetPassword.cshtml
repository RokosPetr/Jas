@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Nastavení nového hesla";
}


<div id="login-form">
    <h1>Zadejte nové heslo</h1>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Input.Code" type="hidden" />
        <input asp-for="Input.UserName" type="hidden" />
        <div class="form-group">
            <img src="/images/uzivatel_login.png">
            <label asp-for="Input.Password" class="control-label"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <img src="/images/uzivatel_login.png">
            <label asp-for="Input.ConfirmPassword" class="control-label"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="prihlaseni">
            <input type="submit" value="ZMĚNIT HESLO" />
        </div>
    </form>
</div>


